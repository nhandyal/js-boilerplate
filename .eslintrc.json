{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "babel",
    "react",
    "flowtype"
  ],
  "extends": ["google", "plugin:react/recommended"],
  "rules": {
    "comma-dangle" : 0,
    "indent": ["error", 4],
    "max-len": 0,
    "no-extend-native": ["error", {
      "exceptions": ["Promise"]
    }],
    "padded-blocks": 0,
    "quote-props": ["error", "as-needed"],
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": false,
        "MethodDefinition": false,
        "ClassDeclaration": false
      }
    }]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "0.14.8"
    }
  }
}